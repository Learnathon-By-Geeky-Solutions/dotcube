<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DeltaShare.View.JoinPoolView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:DeltaShare.ViewModel"
    xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
    Title=""
    Shell.ForegroundColor="{StaticResource Grad1}"
    x:DataType="viewmodel:JoinPoolViewModel">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="8">
        <Image
            HeightRequest="30"
            Aspect="AspectFit"
            VerticalOptions="Center"
            HorizontalOptions="CenterAndExpand"
            Source="join_pool_label.png" />

        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            Text="Scan Pool QR Code" />
        <zxing:CameraBarcodeReaderView
            x:Name="cameraBarcodeReaderView"
            Options="{Binding ReaderOptions}" />
        <Label
            FontSize="Medium"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            Text="Or" />
        <Entry
            FontAttributes="Bold"
            PlaceholderColor="#77000000"
            Placeholder="Join with pool code"
            Text="{Binding PoolCodeInputText}" />
        <Button
            Command="{Binding ClickJoinPoolBtnCommand}"
            FontSize="Medium"
            HorizontalOptions="Fill"
            Text="Join Pool">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop
                        Offset="0"
                        Color="{StaticResource Grad1}" />
                    <GradientStop
                        Offset="1"
                        Color="{StaticResource Grad2}" />
                </LinearGradientBrush>
            </Button.Background>
            <Button.ImageSource>
                <FontImageSource
                    FontFamily="FASolid"
                    Glyph="&#xf0c0;"
                    Color="{AppThemeBinding Light={StaticResource White},
                                                Dark={StaticResource PrimaryDarkText}}" />
            </Button.ImageSource>
        </Button>
    </VerticalStackLayout>
</ContentPage>