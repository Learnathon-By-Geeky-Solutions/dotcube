<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:DeltaShare.ViewModel"
    x:Class="DeltaShare.View.SharePoolView"
    x:DataType="viewmodel:SharePoolViewModel"
    Title="SharePoolView">
    <VerticalStackLayout>
        <Label
            Text="Demo QR code test"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Button
            Text="Generate QR for test"
            Command="{Binding ClickGenerateQRBtnCommand}"
            FontSize="Medium"
            HorizontalOptions="Fill" />
        <Image
            Source="{Binding PoolQRImage}"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            HeightRequest="200"
            WidthRequest="200" />
    </VerticalStackLayout>
</ContentPage>