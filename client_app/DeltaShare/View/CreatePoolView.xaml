<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DeltaShare.View.CreatePoolView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:DeltaShare.ViewModel"
    Title="CreatePoolView"
    x:DataType="viewmodel:CreatePoolViewModel">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="Please allow the required permissions!"
            VerticalOptions="Center" />
        <HorizontalStackLayout Margin="0,10,0,0" HorizontalOptions="Center">
            <Label
                HorizontalOptions="Start"
                MinimumWidthRequest="100"
                Text="Bluetooth"
                VerticalOptions="Center" />
            <Button
                Command="{Binding ClickBluetoothTurnOnBtnCommand}"
                HorizontalOptions="End"
                Text="Turn On"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10,0,0" HorizontalOptions="Center">
            <Label
                HorizontalOptions="Start"
                MinimumWidthRequest="100"
                Text="Hotspot"
                VerticalOptions="Center" />
            <Button
                Command="{Binding ClickHotspotTurnOnBtnCommand}"
                HorizontalOptions="End"
                Text="Turn On"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="0,10,0,0" HorizontalOptions="Center">
            <Label
                HorizontalOptions="Start"
                MinimumWidthRequest="100"
                Text="Location"
                VerticalOptions="Center" />
            <Button
                Command="{Binding ClickLocationTurnOnBtnCommand}"
                HorizontalOptions="End"
                Text="Turn On"
                VerticalOptions="Center" />
        </HorizontalStackLayout>
        <Button
            Margin="0,30,0,0"
            Command="{Binding ClickSharePoolBtnCommand}"
            HorizontalOptions="Center"
            Text="Share Pool"
            VerticalOptions="Start" />

    </VerticalStackLayout>
</ContentPage>