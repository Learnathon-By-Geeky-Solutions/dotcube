<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:DeltaShare.ViewModel"
    x:Class="DeltaShare.View.CreatePoolView"
    x:DataType="viewmodel:CreatePoolViewModel"
    Title="CreatePoolView">
    <VerticalStackLayout>
        <Label
            Text="Please allow the required permissions!"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Margin="0,10,0,0">
            <Label
                Text="Bluetooth"
                MinimumWidthRequest="100"
                VerticalOptions="Center"
                HorizontalOptions="Start" />
            <Button
                Text="Turn On"
                Command="{Binding ClickBluetoothTurnOnBtnCommand}"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </HorizontalStackLayout>
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Margin="0,10,0,0">
            <Label
                Text="Hotspot"
                MinimumWidthRequest="100"
                VerticalOptions="Center"
                HorizontalOptions="Start" />
            <Button
                Text="Turn On"
                Command="{Binding ClickHotspotTurnOnBtnCommand}"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </HorizontalStackLayout>
        <HorizontalStackLayout
            HorizontalOptions="Center"
            Margin="0,10,0,0">
            <Label
                Text="Location"
                MinimumWidthRequest="100"
                VerticalOptions="Center"
                HorizontalOptions="Start" />
            <Button
                Text="Turn On"
                Command="{Binding ClickLocationTurnOnBtnCommand}"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </HorizontalStackLayout>
        <Button
            Margin="0,30,0,0"
            Text="Share Pool"
            Command="{Binding ClickSharePoolBtnCommand}"
            VerticalOptions="Start"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>